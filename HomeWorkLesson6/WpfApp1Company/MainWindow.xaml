<Window x:Class="WpfApp1Company.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1Company"
        mc:Ignorable="d"
        Title="Методичка 6. Продвинутый курс C#. Связывание данных. Триггеры." Loaded="MainWindow_OnLoaded" Height="500" 
        MinHeight="300" Width="700" MinWidth="400" WindowStartupLocation="CenterScreen" Background="Azure" Icon="Avatar.ico" ResizeMode="CanResizeWithGrip">
    <Window.Resources>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top" FontSize="14">
            <MenuItem Header="Отделы компании">
                <MenuItem Header="Добавить новый отдел"/>
                <MenuItem Header="Редактировать выделенный отдел"/>
                <MenuItem Header="Удалить выделенный отдел"/>
            </MenuItem>
            <MenuItem Header="Сотрудники отдела">
                <MenuItem Header="Внести сведения о новом сотруднике"/>
                <MenuItem Header="Изменить сведения выделенного сотрудника"/>
                <MenuItem Header="Уволить выделенноо сотрудника"/>
            </MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Top" Background="PaleGreen">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Приложение WPF учета сотрудников компании с привязками" Height="30" FontSize="20" HorizontalAlignment="Center"/>
            <TextBlock Grid.Row="1" Text="[название компании]" Height="30" FontSize="20" FontWeight="Black" HorizontalAlignment="Center"/>
        </Grid>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <ToolBar FontSize="14">
                <TextBlock Text="Отдел:" VerticalAlignment="Center"/>
                <Button FontSize="14" Margin="2" BorderBrush="Silver">Добавить</Button>
                <Button FontSize="14" Margin="2" BorderBrush="Silver">Редактировать</Button>
                <Button FontSize="14" Margin="2" BorderBrush="Silver">Расформировать</Button>
            </ToolBar>
            <ToolBar FontSize="14">
                <TextBlock Text="Сотрудник отдела:" VerticalAlignment="Center"/>
                <Button FontSize="14" Margin="2" BorderBrush="Silver">Внести</Button>
                <Button FontSize="14" Margin="2" BorderBrush="Silver">Изменить</Button>
                <Button FontSize="14" Margin="2" BorderBrush="Silver">Уволить</Button>
            </ToolBar>
        </StackPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock x:Name="textStatus" Text="Готов"/>
            <Separator/>
            <TextBlock/>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Column="0" Width="5" Background="PaleGreen"/>
            <GroupBox Grid.Column="0" Header="Отделы компании:" Margin="0,0,5,0" FontSize="14">
                <Grid>
                    <ScrollViewer Margin="3">
                        <ListView>

                        </ListView>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Column="1" Header="Сотрудники отдела:" FontSize="14">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Сотрудники отдела " Grid.Column="0" FontSize="14"></TextBlock>
                        <TextBlock Text="[Отдел]" Grid.Column="1" FontWeight="Black" FontSize="14"></TextBlock>
                    </Grid>
                    <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="3">
                        <ListView>

                        </ListView>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
